<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/locationback"
    tools:context=".SelectLocation">

    <Button
        android:id="@+id/current"
        android:layout_width="134dp"
        android:layout_height="165dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#d72503"
        android:layout_marginTop="80dp"
        android:drawableTop="@drawable/currentlocation"
        android:text="Current Location"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />

    <Button
        android:id="@+id/setlocation"
        android:layout_width="134dp"
        android:layout_height="165dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#09aeae"
        android:drawableTop="@drawable/dlocation"
        android:text="Delivery Location"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />
</androidx.constraintlayout.widget.ConstraintLayout>